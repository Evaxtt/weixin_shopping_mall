/* pages/profile/profile.wxss */

.avatar{
  width: 100%;
  height: 350rpx;
  background-color: #4888A1;

  display: flex;
  justify-content: center;
  align-items: center;

}

.avatar image{
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid #e888A1;
  border-radius: 50%;
}

.cell{
  font-size: 18px;
}

.cell-item{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}