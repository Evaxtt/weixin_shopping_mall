/* pages/shopList/shopList.wxss */
page{
  background-color: #fcfcfc;
}
.shop{
  padding: 20rpx;
  border-bottom: 1rpx solid rgb(163, 161, 161);
  display: flex;
  position: relative;
}
.shop image{
  width: 180rpx;
  height: 180rpx;
}
.shop-info{
  display: flex;
  flex-flow: column;
  width: 500rpx;
  margin-left: 10rpx;
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}
.shop-title{
  font-size: 16px;
}
.shop-star{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: #ddd;
}
.star-before{
  position: absolute;
  left: 0;
  top: 0;
  color: #A73129;
  overflow: hidden;
}
.star-after{
  color: #a1a1a1;
}