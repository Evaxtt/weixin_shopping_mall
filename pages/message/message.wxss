/* pages/message/message.wxss */
page{
  /* 页面灰色背景 */
  background-color: #f1f1f1;
}

.card{
  margin: 60rpx 30rpx;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-radius: 20rpx;

  display: flex;
  flex-direction: column;
}

.card-title{
  font-size: 22px;
  font-weight: bold;
}

.card-date{
  font-size: 18px;
  color: #999;
  border-bottom: 1rpx solid #999;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-bottom: 15rpx;
}

.card-image{
  width: 100%;
  height: 300rpx;
}

.card-desc{
  font-size: 20px;
  color: #666;
  border-bottom: 1rpx solid #999;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-bottom: 15rpx;
}

.card-read{
  font-size: 16px;
  color: #666;

  
}
